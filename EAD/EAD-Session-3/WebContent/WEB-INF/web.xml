<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>Employee</display-name>

	<servlet>
		<servlet-name>AddEmployee</servlet-name>
		<servlet-class>com.servlets.AddEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddEmployee</servlet-name>
		<url-pattern>/AddEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowEmployee</servlet-name>
		<servlet-class>com.servlets.ShowAllEmployeesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowEmployee</servlet-name>
		<url-pattern>/ShowEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateEmployeeDetails</servlet-name>
		<servlet-class>com.servlets.UpdateEmployeeDetailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateEmployeeDetails</servlet-name>
		<url-pattern>/UpdateEmployeeDetails</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateEmployee</servlet-name>
		<servlet-class>com.servlets.UpdateEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateEmployee</servlet-name>
		<url-pattern>/UpdateEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SearchEmployee</servlet-name>
		<servlet-class>com.servlets.SearchEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchEmployee</servlet-name>
		<url-pattern>/SearchEmployee</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>